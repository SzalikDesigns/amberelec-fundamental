<?xml version="1.0" encoding="UTF-8"?>
<!--
theme name:		Fundamental (gb)
version:		2.0
author:			Grila
-->

<theme>
	<formatVersion>4</formatVersion>
	<include>./../fundamental.xml</include>

	<view name="system, basic, detailed, grid, video">
		<image name="logo">
			<path>./logo.svg</path>
		</image>
	</view>

	<feature supported="carousel">
		<view name="system">
			<image name="console" extra="true">
				<path>./console.png</path>
			</image>

			<text name="console_notes" extra="true">
				<text>The Game Boy is an 8-bit handheld video game console developed and manufactured by Nintendo. It was released in Japan on April 21, 1989, in North America in August 1989, and in Europe in 1990. In Southern Asia, it is known as the "Tata Game Boy" It is the first handheld console in the Game Boy line. </text>
			</text>

			<text name="release_date" extra="true">
				<text>Release Date: April 21, 1989</text>
			</text>

			<text name="developer" extra="true">
				<text>Developer: Nintendo</text>
			</text>

			<text name="cpu" extra="true">
				<text>CPU: Sharp LR35902</text>
			</text>

			<text name="memory" extra="true">
				<text>Memory: 8 KB SRAM and 8 KB video RAM</text>
			</text>

			<text name="graphics" extra="true">
				<text>Graphics: N/A</text>
			</text>

			<text name="sound" extra="true">
				<text>Sound: 4 channel mono</text>
			</text>

			<text name="media" extra="true">
				<text>Media: Cartridge</text>
			</text>
		</view>
	</feature>

</theme>
