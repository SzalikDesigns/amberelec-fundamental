<theme>
	<formatVersion>4</formatVersion>
	<include>./../fundamental.xml</include>

	<view name="system, basic, detailed, grid, video">
		<image name="logo">
			<path>./logo.svg</path>
		</image>
	</view>

	<feature supported="carousel">
		<view name="system">
			<image name="console" extra="true">
				<path>./console.png</path>
			</image>

			<text name="console_notes" extra="true">
				<text>Script Creation Utility for Maniac Mansion Virtual Machine (ScummVM) is a set of game engine recreations. Originally designed to play LucasArts adventure games that use the SCUMM system, it also supports a variety of non-SCUMM games by companies like Revolution Software and Adventure Soft. </text>
			</text>

			<text name="release_date" extra="true">
				<text>Release Date: October 5, 2001</text>
			</text>

			<text name="developer" extra="true">
				<text>Developer: ScummVM Team</text>
			</text>

			<text name="cpu" extra="true">
				<text>Type: Interpreter</text>
			</text>

			<text name="memory" extra="true">
				<text>Written in: C++ and SDL</text>
			</text>
		</view>
	</feature>

</theme>
