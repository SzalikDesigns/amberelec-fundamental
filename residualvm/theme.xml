<?xml version="1.0" encoding="UTF-8"?>
<!--
theme name:		Fundamental (scummvm)
version:		2.0
author:			Juliano DorigÃ£o
-->

<theme>
	<formatVersion>4</formatVersion>
	<include>./../fundamental.xml</include>

	<view name="system, basic, detailed, grid, video">
		<image name="logo">
			<path>./logo.svg</path>
		</image>
	</view>

	<feature supported="carousel">
		<view name="system">
			<image name="console" extra="true">
				<path>./console.png</path>
			</image>

			<text name="console_notes" extra="true">
				<text>ResidualVM (formerly Residual) is a cross-platform computer program comprising 3D game engine recreations with a common graphical user interface. It supports Grim Fandango, Myst III: Exile and The Longest Journey.</text>
			</text>

			<text name="release_date" extra="true">
				<text>Release Date: August 15, 2003</text>
			</text>

			<text name="developer" extra="true">
				<text>Developer: ResidualVM Team</text>
			</text>

			<text name="cpu" extra="true">
				<text>Type: Interpreter</text>
			</text>

			<text name="memory" extra="true">
				<text>Written in: C++ and SDL</text>
			</text>
		</view>
	</feature>

</theme>
