<?xml version="1.0" encoding="UTF-8"?>
<!--
theme name:		Fundamental (vectrex)
version:		2.0
author:			Juliano Dorigão
-->

<theme>
	<formatVersion>4</formatVersion>
	<include>./../fundamental.xml</include>

	<view name="system, basic, detailed, grid, video">
		<image name="logo">
			<path>./logo.svg</path>
		</image>
	</view>

	<feature supported="carousel">
		<view name="system">
			<image name="console" extra="true">
				<path>./console.png</path>
			</image>

			<text name="console_notes" extra="true">
				<text>SC-3000 was a home computer manufactured by Sega equivalent to the SG-1000 video game. It was sold for ¥ 29,800 in 1983 and advertised as a starter computer. Thanks to compatibility with games developed for SG-1000 and due to the ability to use typical computer applications, it sold more units than SG-1000. </text>
			</text>

			<text name="release_date" extra="true">
				<text>Release Date: November 1983</text>
			</text>

			<text name="developer" extra="true">
				<text>Developer: General Consumer Electronics</text>
			</text>

			<text name="cpu" extra="true">
				<text>CPU: 	Zilog Z80</text>
			</text>

			<text name="memory" extra="true">
				<text>Memory: </text>
			</text>

			<text name="graphics" extra="true">
				<text></text>
			</text>

			<text name="sound" extra="true">
				<text></text>
			</text>

			<text name="media" extra="true">
				<text>Media: ROM cartridge</text>
			</text>
		</view>
	</feature>

</theme>
