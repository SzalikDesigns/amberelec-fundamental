<?xml version="1.0" encoding="UTF-8"?>
<!--
theme name:		Fundamental (zxspectrum)
version:		2.0
author:			Grila
-->

<theme>
	<formatVersion>4</formatVersion>
	<include>./../fundamental.xml</include>
	
	<view name="system, basic, detailed, grid, video">
		<image name="logo">
			<path>./logo.svg</path>
		</image>
	</view>
	
	<feature supported="carousel">
		<view name="system">	
			<image name="console" extra="true">
				<path>./console.png</path>
			</image>
	
			<text name="console_notes" extra="true">
				<text>The VIC-20 (Germany: VC-20; Japan: VIC-1001) is an 8-bit home computer. It was built by Commodore Business Machines with 5 KB of RAM and a MOS Technology 650 CPU. The external design of the machine was later leveraged on the Commodore 64 and C16. The VIC-20 was launched in Japan in 1980.</text>
			</text>
		
			<text name="release_date" extra="true">
				<text>Release Date: April 21, 1980</text>
			</text>
			
			<text name="developer" extra="true">
				<text>Developer: 	Commodore Business Machines</text>
			</text>
			
			<text name="cpu" extra="true">
				<text>CPU: MOS Technology 6502 em 1MHz</text>
			</text>
			
			<text name="memory" extra="true">
				<text>Memory: 16, 48, or 128 KB</text>
			</text>
			
			<text name="graphics" extra="true">
				<text>Graphics: N/A</text>
			</text>
			
			<text name="sound" extra="true">
				<text>Sound: 1-channel</text>
			</text>
			
			<text name="media" extra="true">
				<text>Media: Cassette Tape</text>
			</text>
		</view>
	</feature>
	
</theme>