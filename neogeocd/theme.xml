<theme>
	<formatVersion>4</formatVersion>
	<include>./../fundamental.xml</include>
	
	<view name="system, basic, detailed, grid, video">
		<image name="logo">
			<path>./logo.svg</path>
		</image>
	</view>
	
	<feature supported="carousel">
		<view name="system">	
			<image name="console" extra="true">
				<path>./console.png</path>
			</image>
	
			<text name="console_notes" extra="true">
				<text>Neo Geo CD is the second home video game console of SNK Corporation's Neo Geo family, released in September 9, 1994, four years after its cartridge-based equivalent. This is the same platform, converted to the cheaper CD format retailing at $49 to $79 per title.</text>
			</text>
		
			<text name="release_date" extra="true">
				<text>Release Date: September 9, 1994</text>
			</text>
			
			<text name="developer" extra="true">
				<text>Developer: SNK Corporation</text>
			</text>
			
			<text name="cpu" extra="true">
				<text>CPU: Motorola 68000</text>
			</text>
			
			<text name="memory" extra="true">
				<text>Memory: 7Mb DRAM, 512K VRAM e 64K SRAM</text>
			</text>
			
			<text name="graphics" extra="true">
				<text>Graphics: 304 x 224</text>
			</text>
			
			<text name="sound" extra="true">
				<text>Sound: Yamaha Stereo - 13 channels</text>
			</text>
			
			<text name="media" extra="true">
				<text>Media: CD-ROM</text>
			</text>
		</view>
	</feature>
	
</theme>