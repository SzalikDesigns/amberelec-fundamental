<?xml version="1.0" encoding="UTF-8"?>
<!--
theme name:		Fundamental (gamegear)
version:		2.0
author:			Grila
-->

<theme>
	<formatVersion>4</formatVersion>
	<include>./../fundamental.xml</include>

	<view name="system, basic, detailed, grid, video">
		<image name="logo">
			<path>./logo.svg</path>
		</image>
	</view>

	<feature supported="carousel">
		<view name="system">
			<image name="console" extra="true">
				<path>./console.png</path>
			</image>

			<text name="console_notes" extra="true">
				<text>The Game Gear is an 8-bit handheld game console released by Sega on October 6, 1990 in Japan, 1991 in North America and Europe, and Australia in 1992. The Game Gear primarily competed with Nintendo's Game Boy, the Atari Lynx and NEC's TurboExpress.</text>
			</text>

			<text name="release_date" extra="true">
				<text>Release Date: October 6, 1990</text>
			</text>

			<text name="developer" extra="true">
				<text>Developer: Sega</text>
			</text>

			<text name="cpu" extra="true">
				<text>CPU: Zilog Z80</text>
			</text>

			<text name="memory" extra="true">
				<text>Memory: 8 KB RAM, 16 KB video RAM</text>
			</text>

			<text name="graphics" extra="true">
				<text>Graphics: Custom VDP</text>
			</text>

			<text name="sound" extra="true">
				<text>Sound: TI SN76489</text>
			</text>

			<text name="media" extra="true">
				<text>Media: Cartridge</text>
			</text>
		</view>
	</feature>

</theme>
