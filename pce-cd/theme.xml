<?xml version="1.0" encoding="UTF-8"?>
<!--
theme name:		Fundamental (pcenginecd)
version:		2.0
author:			Juliano Dorigão
-->

<theme>
	<formatVersion>4</formatVersion>
	<include>./../fundamental.xml</include>

	<view name="system, basic, detailed, grid, video">
		<image name="logo">
			<path>./logo.svg</path>
		</image>
	</view>

	<feature supported="carousel">
		<view name="system">
			<image name="console" extra="true">
				<path>./console.png</path>
			</image>

			<text name="console_notes" extra="true">
				<text>The CD-ROM² System is an add-on attachment for the PC Engine that was released in Japan on December 4, 1988. The add-on allows the core versions of the console to play PC Engine games in CD-ROM format in addition to standard HuCards. </text>
			</text>

			<text name="release_date" extra="true">
				<text>Release Date: October 30, 1987</text>
			</text>

			<text name="developer" extra="true">
				<text>Developer: NEC Home Electronics</text>
			</text>

			<text name="cpu" extra="true">
				<text>CPU: Hudson Soft HuC6280</text>
			</text>

			<text name="memory" extra="true">
				<text>Memory: 8 KB RAM plus 64 KB video RAM</text>
			</text>

			<text name="graphics" extra="true">
				<text>Graphics: HuC6260 VCE \ HuC6270A VDC</text>
			</text>

			<text name="sound" extra="true">
				<text>Sound: 6 PSG audio channels</text>
			</text>

			<text name="media" extra="true">
				<text>Media: CD-ROM</text>
			</text>
		</view>
	</feature>

</theme>
