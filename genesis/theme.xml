<?xml version="1.0" encoding="UTF-8"?>
<!--
theme name:		Fundamental (genesis)
version:		2.0
author:			Grila
-->

<theme>
	<formatVersion>4</formatVersion>
	<include>./../fundamental.xml</include>
	
	<view name="system, basic, detailed, grid, video">
		<image name="logo">
			<path>./logo.svg</path>
		</image>
	</view>
	
	<feature supported="carousel">
		<view name="system">	
			<image name="console" extra="true">
				<path>./console.png</path>
			</image>
	
			<text name="console_notes" extra="true">
				<text>The Sega Genesis, known as the Mega Drive in most regions outside of North America, is a 16-bit home video game console which was developed and sold by Sega Enterprises, Ltd. The Genesis was Sega's third console and the successor to the Master System. </text>
			</text>
		
			<text name="release_date" extra="true">
				<text>Release Date: August 14, 1989</text>
			</text>
			
			<text name="developer" extra="true">
				<text>Developer: Sega</text>
			</text>
			
			<text name="cpu" extra="true">
				<text>CPU: Motorola 68000, Zilog Z80 co-processor</text>
			</text>
			
			<text name="memory" extra="true">
				<text>Memory: 64 KB main RAM and 64 KB video RAM</text>
			</text>
			
			<text name="graphics" extra="true">
				<text>Graphics: Yahama YM7101 VDP</text>
			</text>
			
			<text name="sound" extra="true">
				<text>Sound: Yamaha YM2612, Texas Instruments SN76489A</text>
			</text>
			
			<text name="media" extra="true">
				<text>Media: Cartridge</text>
			</text>
		</view>
	</feature>
	
</theme>