<theme>
	<formatVersion>4</formatVersion>
	<include>./../fundamental.xml</include>
	
	<view name="system, basic, detailed, grid, video">
		<image name="logo">
			<path>./logo.svg</path>
		</image>
	</view>
	
	<feature supported="carousel">
		<view name="system">	
			<image name="console" extra="true">
				<path>./console.png</path>
			</image>
	
			<text name="console_notes" extra="true">
				<text>CPS-2 or Capcom Play System 2 is an arcade card created by Capcom. It debuted in 1993 with the game Super Street Fighter II. CPS-2 consisted of two separate parts; a board A, which connects to JAMMA wiring and contains common components between the CPS-2 games, board B contains the game itself.</text>
			</text>
		
			<text name="release_date" extra="true">
				<text>Release Date: may 30, 1993</text>
			</text>
			
			<text name="developer" extra="true">
				<text>Developer: Capcom</text>
			</text>
			
			<text name="cpu" extra="true">
				<text> Motorola 68000 a 11.8 MHz</text>
			</text>
			
			<text name="memory" extra="true">
				<text></text>
			</text>
			
			<text name="graphics" extra="true">
				<text></text>
			</text>
			
			<text name="sound" extra="true">
				<text>Q-Sound a 4 MHz</text>
			</text>
			
			<text name="media" extra="true">
				<text></text>
			</text>
		</view>
	</feature>
	
</theme>