<theme>
	<formatVersion>4</formatVersion>
	<include>./../fundamental.xml</include>
	
	<view name="system, basic, detailed, grid, video">
		<image name="logo">
			<path>./logo.svg</path>
		</image>
	</view>
	
	<feature supported="carousel">
		<view name="system">	
			<image name="console" extra="true">
				<path>./console.png</path>
			</image>
	
			<text name="console_notes" extra="true">
				<text>The 3DO Interactive Multiplayer, often called the 3DO, is a home video game console platform developed by The 3DO Company. Conceived by entrepreneur and Electronic Arts founder Trip Hawkins, the 3DO was not a console manufactured by the company itself.</text>
			</text>
		
			<text name="release_date" extra="true">
				<text>Release Date: October 4, 1993</text>
			</text>
			
			<text name="developer" extra="true">
				<text>Developer: The 3DO Company</text>
			</text>
			
			<text name="cpu" extra="true">
				<text>CPU: 32-bit RISC CPU ARM60</text>
			</text>
			
			<text name="memory" extra="true">
				<text>Memory: 2 MB RAM, 1 MB VRAM</text>
			</text>
			
			<text name="graphics" extra="true">
				<text>Graphics: Panasonic FZ-1</text>
			</text>
			
			<text name="sound" extra="true">
				<text>Sound: 16-bit stereo sound</text>
			</text>
			
			<text name="media" extra="true">
				<text>Media: CD-ROM</text>
			</text>
		</view>
	</feature>
	
</theme>