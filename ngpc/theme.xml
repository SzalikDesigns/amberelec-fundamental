<theme>
	<formatVersion>4</formatVersion>
	<include>./../fundamental.xml</include>
	
	<view name="system, basic, detailed, grid, video">
		<image name="logo">
			<path>./logo.svg</path>
		</image>
	</view>
	
	<feature supported="carousel">
		<view name="system">	
			<image name="console" extra="true">
				<path>./console.png</path>
			</image>
	
			<text name="console_notes" extra="true">
				<text>The Neo Geo Pocket Color (also stylized as NEOGEOPOCKET COLOR, often abbreviated NGPC), is a 16-bit color handheld video game console manufactured by SNK. It is a successor to SNK's monochrome Neo Geo Pocket handheld which debuted in 1998 in Japan, with the Color being fully backward compatible.</text>
			</text>
		
			<text name="release_date" extra="true">
				<text>Release Date: March 16, 1999</text>
			</text>
			
			<text name="developer" extra="true">
				<text>Developer: SNK</text>
			</text>
			
			<text name="cpu" extra="true">
				<text>CPU: Toshiba TLCS900H core (16-bit)</text>
			</text>
			
			<text name="memory" extra="true">
				<text>Memory: 12 k for 900H, 4 k for Z80</text>
			</text>
			
			<text name="graphics" extra="true">
				<text>Graphics: 160x152 (256x256 virtual screen)</text>
			</text>
			
			<text name="sound" extra="true">
				<text>Sound: SN76489 variant</text>
			</text>
			
			<text name="media" extra="true">
				<text>Media: ROM cartridge</text>
			</text>
		</view>
	</feature>
	
</theme>